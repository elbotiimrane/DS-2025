import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from ucimlrepo import fetch_ucirepo


def load_and_clean_data():
    print("--- Chargement du dataset Online Retail ---")

    online_retail = fetch_ucirepo(id=352)
    df = online_retail.data.features.copy()

    # Add target only if it exists
    if online_retail.data.targets is not None:
        df["Target"] = online_retail.data.targets

    print("\nAperçu des données :")
    print(df.head())
    print("\nInformations DataFrame :")
    print(df.info())

    # Nettoyage
    df["InvoiceDate"] = pd.to_datetime(df["InvoiceDate"], errors="coerce")
    df.dropna(subset=["StockCode", "CustomerID"], inplace=True)
    df = df[(df["Quantity"] > 0) & (df["UnitPrice"] > 0)]

    df["TotalPrice"] = df["Quantity"] * df["UnitPrice"]

    print("\nRésumé après nettoyage :")
    print(f"Lignes restantes : {len(df)}")
    print(df[["Quantity", "UnitPrice", "TotalPrice"]].describe().T)

    return df


def create_visualizations(df):
    plt.figure(figsize=(18, 15))

    # 1. Distribution des prix unitaires (log)
    plt.subplot(3, 2, 1)
    plt.hist(np.log1p(df["UnitPrice"]), bins=50)
    plt.title("Distribution du Prix Unitaire (log)")
    plt.xlabel("log(1 + UnitPrice)")
    plt.ylabel("Fréquence")

    # 2. Top 10 pays par transactions
    plt.subplot(3, 2, 2)
    top_countries = df["Country"].value_counts().nlargest(10)
    plt.bar(top_countries.index, top_countries.values)
    plt.title("Top 10 Pays par Transactions")
    plt.xticks(rotation=45)

    # 3. Ventes mensuelles
    plt.subplot(3, 1, 2)
    df["InvoiceMonth"] = df["InvoiceDate"].dt.to_period("M")
    monthly_sales = df.groupby("InvoiceMonth")["TotalPrice"].sum()
    monthly_sales.index = monthly_sales.index.astype(str)

    plt.plot(monthly_sales.index, monthly_sales.values, marker="o")
    plt.title("Tendance des Ventes Mensuelles")
    plt.xlabel("Mois")
    plt.ylabel("Revenu (£)")
    plt.xticks(rotation=45)

    # 4. Top 10 produits par revenu
    plt.subplot(3, 2, 5)
    top_products = df.groupby("StockCode")["TotalPrice"].sum().nlargest(10)
    plt.bar(top_products.index.astype(str), top_products.values)
    plt.title("Top 10 Produits par Revenu")
    plt.xticks(rotation=45)

    # 5. Distribution des quantités (<100)
    plt.subplot(3, 2, 6)
    qty_filtered = df[df["Quantity"] < 100]["Quantity"]
    plt.boxplot(qty_filtered)
    plt.title("Distribution des Quantités (<100)")

    plt.tight_layout()
    plt.show()


def print_key_metrics(df):
    print("\n--- Indicateurs Clés ---")
    print(f"Période : {df['InvoiceDate'].min().date()} → {df['InvoiceDate'].max().date()}")
    print(f"Clients uniques : {df['CustomerID'].nunique()}")
    print(f"Revenu total : £{df['TotalPrice'].sum():,.2f}")


if __name__ == "__main__":
    df = load_and_clean_data()
    create_visualizations(df)
    print_key_metrics(df)

